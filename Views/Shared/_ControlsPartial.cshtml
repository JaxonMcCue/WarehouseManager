<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<div class="offcanvas offcanvas-start" id="test">
    <div class="offcanvas-header">
        <h6 class="offcanvas-title" id="test">Employee Controls</h6>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="nav nav-pills flex-column mb-sm-auto align-items-start" id="menu">
            @if (User.IsInRole("Admin"))
            {
                <li class="nav item">
                    <a class="nav-link text-truncate" asp-controller="admin" asp-action="index">
                        <span class="ms-1 d-none d-sm-inline">Admin Dashboard</span>
                    </a>
                </li>
                <li>
                    <a class="nav-link text-truncate" asp-area="" asp-controller="Item" asp-action="DisplayItems">
                        <span class="ms-1 d-none d-sm-inline">Items</span>
                    </a>
                </li>
                <li>
                    <a class="nav-link text-truncate" asp-area="" asp-controller="Item" asp-action="Reports">
                        <span class="ms-1 d-none d-sm-inline">Reports</span>
                    </a>
                </li>
            }
            <li>
                <a class="nav-link text-truncate" asp-area="" asp-controller="Item" asp-action="EditAmt">
                    <span class="ms-1 d-none d-sm-inline">Item amount edits</span>
                </a>
            </li>
            <li>
                <a class="nav-link text-truncate" asp-area="" asp-controller="customer" asp-action="Index">
                    <span class="ms-1 d-none d-sm-inline">Customer Contact</span>
                </a>
            </li>
        </ul>
    </div>
</div>

<button class="btn btn-primary float-right" type="button" data-bs-toggle="offcanvas" data-bs-target="#test">Control Panel</button>