@model WarehouseManager.Models.Refund

@{
    ViewData["Title"] = "requestRefund";
}

<h1>Request Refund</h1>

<h4>Refund Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="requestRefund">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" value="@ViewBag.Order" />
            <div class="form-group">
                <label class="control-label">Why would you like to request a refund?</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
